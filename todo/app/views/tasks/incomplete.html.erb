<% content_for :title, "Incomplete Tasks" %>

<h1>Incomplete Tasks</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Due Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.due_date.strftime("%Y-%m-%d %H:%M") if task.due_date %></td>
        <td>
          <%= button_to 'Mark Complete', toggle_complete_task_path(task), method: :patch, class: 'btn btn-success' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <%= link_to "Back to All Tasks", tasks_path, class: "btn btn-secondary" %>
</div>
